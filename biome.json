{
	"$schema": "https://biomejs.dev/schemas/1.8.2/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"ignore": ["node_modules", ".github", ".devcontainer", "dist", "coverage"]
	},
	"formatter": {
		"ignore": ["node_modules", ".github", ".devcontainer", "dist", "coverage"]
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"quoteStyle": "single"
		}
	}
}
